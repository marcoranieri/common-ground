<%= turbo_stream_from comment %>
<%= turbo_frame_tag comment do %>
  <div class="d-flex justify-content-between">
    <div style="opacity:.6">
      <i class="far fa-user"></i>
      <em><small><%= comment.user.username %></small></em>
    </div>
    <div class="d-flex">
      <%= link_to edit_comment_path(comment), class: "mr-3" do %>
        <i class="far fa-edit" style="font-size:1.5em;color:goldenrod"></i>
      <% end %>
      <%= link_to comment_path(comment), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class='far fa-trash-alt' style="font-size:1.5em;color:lightcoral"></i>
      <% end %>
    </div>
  </div>

  <%= comment.body %>

  <hr>
<% end %>